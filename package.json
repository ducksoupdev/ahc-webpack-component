{
  "name": "ahc-webpack-component",
  "version": "0.1.0",
  "description": "Webpack component",
  "directories": {
    "test": "test"
  },
  "typings": "./typings/ahc-webpack-component.d.ts",
  "scripts": {
    "build": "npm run compile",
    "compile": "npm run lint && webpack --config config/webpack.config.prod.js",
    "clean": "rimraf dist && rimraf coverage",
    "develop": "npm run sass && concurrent --kill-others \"webpack --config config/webpack.config.dev.js --watch\" \"node-sass --watch --output ./dist/css ./src/sass\" \"live-server --port=63998 --quiet --open=src/\"",
    "lint": "ts-node ./scripts/ts-lint.ts -f src/**/*.ts",
    "postinstall": "ts-node ./scripts/update-sass.ts",
    "test": "karma start karma.unit.js",
    "coverage": "karma start karma.coverage.js && npm run ts-coverage-remap",
    "watch": "webpack --watch",
    "watch-karma": "npm run compile && concurrent --kill-others \"webpack --config config/webpack.config.dev.js --watch\" \"karma start karma.unit.js --singleRun=false --autoWatch=true\"",
    "ci-tc": "tsc --inlineSources && karma --env=tc start karma.coverage.js",
    "ci-jk": "tsc --inlineSources && karma --env=jk start karma.coverage.js",
    "copy-sass": "ts-node ./scripts/copy.ts ./src/sass/ahc-webpack-component.scss ./dist/sass/ahc-webpack-component.scss",
    "clean-css": "cleancss -o dist/css/ahc-webpack-component.min.css dist/css/ahc-webpack-component.css",
    "dist": "npm run clean && npm run mkdir && npm run build && npm run test && npm run sass && npm run copy-sass && npm run clean-css && npm run process-html",
    "mkdir": "node ./node_modules/mkdirp/bin/cmd ./dist/js ./dist/css ./dist/sass",
    "sass": "node-sass --output ./dist/css ./src/sass",
    "process-html": "htmlprocessor src/index.html -o dist/index.html",
    "serve": "live-server --open=dist/",
    "ts-coverage-remap": "remap-istanbul -i coverage/json/coverage-final.json -o coverage/html-ts -t html"
  },
  "devDependencies": {
    "angular": "1.4",
    "angular-mocks": "1.4",
    "clean-css": "~3.4.18",
    "concat-with-sourcemaps": "~1.0.4",
    "concatenate-files": "~0.1.1",
    "concurrently": "~3.1.0",
    "cp": "~0.2.0",
    "glob": "~7.1.1",
    "globby": "~6.1.0",
    "htmlprocessor": "~0.2.3",
    "istanbul-instrumenter-loader": "0.2.0",
    "jasmine-core": "~2.5.2",
    "jquery": "~3.1.1",
    "karma": "~1.3.0",
    "karma-chrome-launcher": "~2.0.0",
    "karma-cli": "1.0.1",
    "karma-coverage": "~1.1.1",
    "karma-jasmine": "~1.1.0",
    "karma-junit-reporter": "~1.2.0",
    "karma-mocha-reporter": "~2.2.1",
    "karma-phantomjs-launcher": "~1.0.2",
    "karma-source-map-support": "~1.2.0",
    "karma-teamcity-reporter": "~1.0.0",
    "karma-webpack": "~1.8.0",
    "live-server": "~1.1.0",
    "lodash": "~4.17.2",
    "minimist": "~1.2.0",
    "mkdirp": "~0.5.1",
    "ng-html2js": "~3.0.0",
    "node-sass": "~4.0.0",
    "phantomjs-prebuilt": "~2.1.7",
    "raw-loader": "~0.5.1",
    "remap-istanbul": "~0.8.0",
    "rimraf": "~2.5.2",
    "ts-loader": "~1.3.2",
    "ts-node": "~1.7.2",
    "tslint": "~4.0.2",
    "tslint-loader": "~3.3.0",
    "typescript": "~2.1.4",
    "typings": "~2.0.0",
    "webpack": "~1.14.0"
  }
}
